<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配達先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <th><%= order.created_at.strftime("%Y/%m/%d") %></th>
        <th><%= "〒" + order.postal_code %><br><%= order.address %><br><%= order.name %></th>
        <th>
          <% order.order_items.each_with_index do |order_item, i| %>
            <%= order_item.item.name %><br>
          <% end %>
        </th>
        <th><%= order.total_payment.to_s(:delimited) %>円</th>
        <th><%= Order.statuses_i18n[order.status] %></th>
        <th><%= link_to "表示する", order_path(order.id) %></th>
      </tr>
    <% end %>
  </tbody>
</table>