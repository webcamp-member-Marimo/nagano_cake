<h1>配送先編集</h1>
<%= form_with model: @address, url: delivery_address_path, method: :patch do |f| %>
 <table>
    <tr>
      <th><%= f.label :postal_code, "郵便番号(ハイフン)なし" %></th>
      <td><%= f.text_field :postal_code, placeholder: @address.postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address, placeholder: @address.address %></td>
    </tr>
    <tr>
      <th><%= f.label :name, "宛名" %></th>
      <td><%= f.text_field :name, placeholder: @address.name %></td>
    </tr>
  </table>
  <%= f.submit "変更内容を保存" %>
<% end %>