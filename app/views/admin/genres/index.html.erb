<h1>Genre Index</h1>
<h3>ジャンル一覧・追加</h3>
<%= form_with model: @genre, url: "/admin/genres", method: :post do |f| %>
  <%= f.label :name, "ジャンル名" %>
  <%= f.text_field :name, placeholder: "ジャンル名" %>
  <%= f.submit '新規登録' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>