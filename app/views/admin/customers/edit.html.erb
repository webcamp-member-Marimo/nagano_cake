<h1><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h1>
<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <table>
    <tr>
      <th>会員</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th><%= f.label :postal_code, "郵便番号" %></th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th><%= f.label :address, "住所" %></th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th><%= f.label :telephone_number, "電話番号" %></th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th><%= f.label :email, "メールアドレス" %></th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th><%= f.label :is_deleted, "会員ステータス" %></th>
      <% if @customer.is_deleted == true %>
        <td>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_deleted, :true, checked: true %>
          <%= f.label :is_active, "退会" %>
        </td>
      <% elsif @customer.is_deleted == false %>
        <td>
          <%= f.radio_button :is_deleted, :false, checked: true %>
          <%= f.label :is_active, "有効" %>
          <%= f.radio_button :is_deleted, :ture %>
          <%= f.label :is_active, "退会" %>
        </td>
      <% end %>
    </tr>
  </table>
  <%= f.submit "変更を保存" %>
<% end %>